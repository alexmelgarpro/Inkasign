@model IEnumerable<Inkasign.Models.Producto>
@{
    ViewData["Title"] = "Catalogo Inkasign Outlet";  
}

<form asp-controller="Catalogo" asp-action="Index">
       <p>
         Nombre: <input type="text" name="searchString">
         <input type="submit" value="Filter" />


       </p>

</form>       
<h1>@ViewData["Title"]</h1>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <center><img class="img-responsive" width="150" height="200"
                       src="/images/@item.ImageName" alt="@item.ImageName"  /></center>
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Precio)</p>


                  <a class="btn btn-primary" asp-action="Agregar" asp-route-id="@item.Id">Agregar</a>

                  <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Visualizar</a>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>
@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<section id="content">

<div class="create mt-5">
    
        <form class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
            <fieldset>

            <h3 class="text-center" >Crear una nueva cuenta</h3>
           
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Input.Email">Correo: </label>
                <input asp-for="Input.Email" class="form-control tamaño" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Input.Password">Contraseña: </label>
                <input asp-for="Input.Password" class="form-control tamaño" id="password"/>
                <input type="checkbox" onclick="mostrarPassword('password')">Mostrar contraseña
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-12 mb-3">
                <label class="form-label" asp-for="Input.ConfirmPassword">Confirmar Contraseña: </label>
                <input asp-for="Input.ConfirmPassword" class="form-control tamaño" id="confirm"/>
                <input type="checkbox" onclick="mostrarPassword('confirm')">Mostrar contraseña
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
           
           <div class="text-center mt-5">
 
            <button type="submit" class="btn btn-info">Registrar</button>

            </div>

            </fieldset>

        </form>
       
</div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="~/js/script.js"></script>
